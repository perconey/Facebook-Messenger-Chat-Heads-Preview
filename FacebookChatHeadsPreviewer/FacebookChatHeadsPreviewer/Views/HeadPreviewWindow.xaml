<Window x:Class="FacebookChatHeadsPreviewer.Views.HeadPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FacebookChatHeadsPreviewer.Views"
        xmlns:ViewModel="clr-namespace:FacebookChatHeadsPreviewer.ViewModels"
        mc:Ignorable="d"
        Title="FB Messenger Chat Heads Preview" Background="Transparent"
        AllowsTransparency="True" OpacityMask="White" WindowStyle="None" Height="400" Width="400" ResizeMode="NoResize">
    <Window.DataContext>
        <ViewModel:HeadPreviewWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Image Source="{Binding imgpath}" HorizontalAlignment="Left" Height="226" Margin="78,94,0,0" VerticalAlignment="Top" Width="244"/>

    </Grid>
</Window>
